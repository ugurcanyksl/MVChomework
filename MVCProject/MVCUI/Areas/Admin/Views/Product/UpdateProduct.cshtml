@model Product
@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    TempData["Title"] = "Ürün Güncelle";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Ürün Bilgileri</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form role="form" method="post">
            @Html.HiddenFor(x => x.ID)
            <div class="card-body">
                <div class="form-group">
                    <label>Ürün Adı</label>
                    @*<input type="text" class="form-control" placeholder="kategori adı" name="CategoryName">*@
                    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control", placeholder = "ürün adı" })
                </div>
                <div class="form-group">
                    <label>Fiyat</label>
                    @Html.TextAreaFor(x => x.UnitPrice, new { @class = "form-control", placeholder = "fiyat" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
                <div class="form-group">
                    <label>Stok</label>
                    @Html.TextAreaFor(x => x.UnitsInStock, new { @class = "form-control", placeholder = "stok" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
                <div class="form-group">
                    <label>Altkategori</label>
                    @Html.TextAreaFor(x => x.SubCategoryId, new { @class = "form-control", placeholder = "altkategori" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
</div>
