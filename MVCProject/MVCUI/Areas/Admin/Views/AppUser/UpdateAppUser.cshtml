@model AppUser
@{
    ViewBag.Title = "UpdateAppUser";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    TempData["Title"] = "Kullanıcı Güncelle";
}


<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Kullanıcı Bilgileri</h3>
        </div>

        
        <!-- /.card-header -->
        <!-- form start -->
        <form role="form" method="post">
            @Html.HiddenFor(x => x.ID)
            <div class="card-body">
                <div class="form-group">
                    <label>Profil Foto</label>
                    @*<input type="text" class="form-control" placeholder="kategori adı" name="CategoryName">*@
                    @Html.TextBoxFor(x => x.ImagePath, new { @class = "form-control", placeholder = "profil foto" })
                </div>
                <div class="form-group">
                    <label>Kullanıcı Adı</label>
                    @*<input type="text" class="form-control" placeholder="kategori adı" name="CategoryName">*@
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", placeholder = "kullanıcı adı" })
                </div>
                <div class="form-group">
                    <label>Ad</label>
                    @Html.TextAreaFor(x => x.Name, new { @class = "form-control", placeholder = "ad" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
                <div class="form-group">
                    <label>Soyad</label>
                    @Html.TextAreaFor(x => x.LastName, new { @class = "form-control", placeholder = "soyad" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
                <div class="form-group">
                    <label>Email</label>
                    @Html.TextAreaFor(x => x.Email, new { @class = "form-control", placeholder = "email" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
                <div class="form-group">
                    <label>Doğum Tarihi</label>
                    @Html.TextAreaFor(x => x.BirthDate, new { @class = "form-control", placeholder = "doğum tarihi" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
                <div class="form-group">
                    <label>Adres</label>
                    @Html.TextAreaFor(x => x.Address, new { @class = "form-control", placeholder = "adres" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
                <div class="form-group">
                    <label>Telefon</label>
                    @Html.TextAreaFor(x => x.PhoneNumber, new { @class = "form-control", placeholder = "telefon" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
                <div class="form-group">
                    <label>Cinsiyet</label>
                    @Html.TextAreaFor(x => x.Gender, new { @class = "form-control", placeholder = "cinsiyet" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
</div>
