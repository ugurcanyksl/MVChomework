@model AppUser
@{
    ViewBag.Title = "AddAppUser";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    TempData["Title"] = "Kullanıcı Ekle";

}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Kullanıcı Bilgileri</h3>
        </div>

        
        <!-- /.card-header -->
        <!-- form start -->
        <form role="form" method="post" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group">
                    <label>Kullanıcı Adı</label>
                    @*<input type="text" class="form-control" placeholder="kategori adı" name="CategoryName">*@
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", placeholder = "kullanıcı adı" })
                </div>
                <div class="form-group">
                    <label>Ad</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "ad" })
                </div>
                <div class="form-group">
                    <label>Şifre</label>
                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", placeholder = "şifre" })
                </div>
                <div class="form-group">
                    <label>Soyad</label>
                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", placeholder = "Soyad" })
                </div>
                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email" })
                </div>
                <div class="form-group">
                    <label>Doğum Tarihi</label>
                    @Html.TextBoxFor(x => x.BirthDate, new { @class = "form-control", @type = "date" })
                </div>
                <div class="form-group">
                    <label>Telefon</label>
                    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control", placeholder = "Telefon" })
                </div>
                <div class="form-group">
                    <label>Cinsiyet</label>
                    @Html.TextBoxFor(x => x.Gender, new { @class = "form-control", placeholder = "cinsiyet" })
                </div>
                <div class="form-group">
                    <label>Adres</label>
                    @Html.TextBoxFor(x => x.Address, new { @class = "form-control", placeholder = "adres" })
                </div>
                <div class="form-group">
                    <input type="file" name="imagePath" />
                </div>

            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </form>
    </div>
</div>



