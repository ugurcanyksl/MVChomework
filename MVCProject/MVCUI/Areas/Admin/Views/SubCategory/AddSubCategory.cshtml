@model SubCategory
@{
    ViewBag.Title = "AddSubCategory";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    TempData["Title"] = "AltKategori Ekle";
}


<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">AltKategori Bilgileri</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form role="form" method="post">
            <div class="card-body">
                <div class="form-group">
                    <label>AltKategori Adı</label>
                    @*<input type="text" class="form-control" placeholder="kategori adı" name="CategoryName">*@
                    @Html.TextBoxFor(x => x.SubCategoryName, new { @class = "form-control", placeholder = "altkategori adı" })
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control", placeholder = "açıklama" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </form>
    </div>
</div>
