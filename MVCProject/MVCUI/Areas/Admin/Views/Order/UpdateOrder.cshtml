@model Order
@{
    ViewBag.Title = "UpdateOrder";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    TempData["Title"] = "Sipariş Güncelle";

}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Sipariş Bilgileri</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form role="form" method="post">
            @Html.HiddenFor(x => x.ID)
            <div class="card-body">
                <div class="form-group">
                    <label>Sipariş Durum</label>
                    @*<input type="text" class="form-control" placeholder="kategori adı" name="CategoryName">*@
                    @Html.TextBoxFor(x => x.Status, new { @class = "form-control", placeholder = "sipariş durum" })
                </div>
                <div class="form-group">
                    <label>Sipariş Onay</label>
                    @Html.TextAreaFor(x => x.Confirmed, new { @class = "form-control", placeholder = "sipariş onay" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
                <div class="form-group">
                    <label>Sipariş Tarih</label>
                    @Html.TextAreaFor(x => x.OrderDate, new { @class = "form-control", placeholder = "sipariş tarih" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
</div>
