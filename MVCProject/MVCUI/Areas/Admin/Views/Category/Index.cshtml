@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    TempData["Title"] = "Kategoriler";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            @Html.ActionLink("Kategori Ekle", "AddCategory", "Category", null, new { @class = "btn btn-info float-right" })
        </div>
        <div class="panel-heading">
            @if (TempData["Message"] != null)
            {
                <span class="alert-dismissible alert-success">@TempData["Message"]</span>
            }
            else
            {
                <h2></h2>
            }

        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Kategori Adı</th>
                        <th>Açıklama</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Category category in Model)
                    {
                        <tr>
                            <td>@category.CategoryName</td>
                            <td>@category.Description</td>
                            <td>
                                @Html.ActionLink("Güncelle", "UpdateCategory", new { id = category.ID }, new { @class = "badge bg-warning" })
                                @Html.ActionLink("Sil", "DeleteCategory", new { id = category.ID }, new { @class = "badge bg-danger" })
                                @Html.ActionLink("Alt Kategori", "AddSubCategory", new { id = category.ID }, new { @class = "btn btn-success float-right" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

